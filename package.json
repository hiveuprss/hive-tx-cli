{
  "name": "@peakd/hive-tx-cli",
  "version": "0.1.0",
  "description": "A CLI wrapper for the Hive blockchain API using hive-tx",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "hive": "./bin/hive.js"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:binary": "bun build --compile --minify src/index.ts --outfile hive",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepare": "pnpm build"
  },
  "keywords": [
    "hive",
    "blockchain",
    "cli",
    "hive-tx"
  ],
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "fs-extra": "^11.3.3",
    "hive-tx": "^6.1.9",
    "inquirer": "^13.2.2",
    "ora": "^9.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=22.0.0"
  }
}
